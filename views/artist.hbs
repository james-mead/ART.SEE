<section class="jumbotron">
  <img src="/images/{{id}}001.jpg" class="main-image img-responsive" alt="Street Art by {{name}}">
</section>
<section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h1>Artist Information</h1>
        <hr>
        {{#if name}}
          <h2>{{name}}</h2>
        {{/if}}
        {{#if about}}
          <p>{{about}}</p>
        {{/if}}
        {{#if website}}
          <p><strong>Website:</strong> <a href="{{website}}">{{website}}</a></p>
        {{/if}}
        {{#if phone}}
          <p><strong>Phone:</strong> {{phone}}</p>
        {{/if}}
        {{#if email}}
          <p><strong>Email:</strong> {{email}}</p>
        {{/if}}
        {{#if followers}}
          <p><strong>Followers:</strong> {{followers}}</p>
        {{/if}}
      </div>
    </div>
  </div>
</section>

